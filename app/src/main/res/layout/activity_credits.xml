<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="ca.sfu.pacmacro.CreditsActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/pacman_icon_size"
            android:layout_height="@dimen/pacman_icon_size"
            android:src="@drawable/pacman"
            android:onClick="onLogoClick"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:text="@string/app_name"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:text="@string/versionName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        android:textSize="40sp"
        android:text="@string/credits_activity_sponsors_heading"/>

    <ImageView
        android:layout_width="@dimen/mobify_icon_width"
        android:layout_height="@dimen/mobify_icon_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:id="@+id/mobifyLogo"
        android:src="@drawable/mobify_logo"
        android:contentDescription="@string/mobify_logo_content_description" />

    <ImageView
        android:layout_width="@dimen/sfu_icon_width"
        android:layout_height="@dimen/sfu_icon_height"
        android:layout_gravity="center_horizontal"
        android:id="@+id/sfuLogo"
        android:src="@drawable/sfu_logo"
        android:contentDescription="@string/sfu_logo_content_description" />
</LinearLayout>
